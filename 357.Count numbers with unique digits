// Given an integer n, return the count of all numbers with unique digits, x, where 0 <= x < 10n.
// Example 1:

// Input: n = 2
// Output: 91
// Explanation: The answer should be the total numbers in the range of 0 â‰¤ x < 100,
// excluding 11,22,33,44,55,66,77,88,99
// Example 2:

// Input: n = 0
// Output: 1

#include <iostream>
#include <vector>

class Solution {
public:
    int countNumbersWithUniqueDigits(int n) {
        if (n == 0) return 1;
        
        int uniqueCount = 10;
        int availableDigits = 9;
        int currentProduct = 9;

        for (int i = 2; i <= n && availableDigits > 0; ++i) {
            currentProduct *= availableDigits;
            uniqueCount += currentProduct;
            availableDigits--;
        }
        
        return uniqueCount;
    }
};

int main() {
    Solution solution;
    int n;
    
    std::cout << "Enter n: ";
    std::cin >> n;
    
    int result = solution.countNumbersWithUniqueDigits(n);
    std::cout << "The result is: " << result << std::endl;
    
    return 0;
}
